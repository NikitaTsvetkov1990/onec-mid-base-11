	// Цветков Н.А. Задача №1 "Внесение изменений в конфигурацию на поддержке" от 14.10.2024
	// Новый код
	ЭлементКонтактноеЛицо = Элементы.Вставить("КЛ_КонтактноеЛицо", Тип("ПолеФормы"), Элементы.ГруппаШапкаПраво);
	ЭлементКонтактноеЛицо.ПутьКДанным = "Объект.КЛ_КонтактноеЛицо";
	ЭлементКонтактноеЛицо.Вид = ВидПоляФормы.ПолеВвода;
	
	ЭлементКонтактноеЛицо = Элементы.Вставить("КЛ_СогласованнаяСкидка", Тип("ПолеФормы"), Элементы.ГруппаСуммаДокумента, Элементы.ЯчейкаСуммаДокумента);
	ЭлементКонтактноеЛицо.ПутьКДанным = "Объект.КЛ_СогласованнаяСкидка";
	ЭлементКонтактноеЛицо.Вид = ВидПоляФормы.ПолеВвода;
	ЭлементКонтактноеЛицо.УстановитьДействие("ПриИзменении", "КЛ_СогласованнаяСкидкаПриИзменении");
	
	Команда = Команды.Добавить("ПересчетСУчетомСкидки");
	Команда.Заголовок = "Пересчет с учетом скидки";
	Команда.Действие = "КЛ_ПересчетСУчетомСкидки";
	
	ЭлементКнопка = Элементы.Вставить("КнопкаПересчетСУчетомСкидки", Тип("КнопкаФормы"), Элементы.ГруппаСуммаДокумента, Элементы.КЛ_СогласованнаяСкидка);
	ЭлементКнопка.ИмяКоманды = "ПересчетСУчетомСкидки";
	ЭлементКнопка.Вид = ВидКнопкиФормы.ОбычнаяКнопка;
	// КонецДоработкиКонтактныеЛица
	
КонецПроцедуры

